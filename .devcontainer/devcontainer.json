{
  "name": "get2know.io blog devcontainer",
  "image": "ghcr.io/get2knowio/devcontainer:latest",
  "remoteUser": "vscode",
  "features": {},
  "remoteEnv": {
    "GH_PAGER": ""
  },
  "forwardPorts": [3000],
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },
  "workspaceFolder": "/workspaces/blog",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/blog,type=bind,consistency=cached",
  "postCreateCommand": "sudo mkdir -p /workspaces/worktrees-${containerWorkspaceFolder##*/} && sudo chown -R vscode:vscode /workspaces/worktrees-${containerWorkspaceFolder##*/}",
  "initializeCommand": "docker pull ghcr.io/get2knowio/devcontainer:latest",
  "mounts": [
    "source=${localEnv:HOME}/.codex,target=/home/vscode/.codex,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/opencode,target=/home/vscode/.config/opencode,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/gh,target=/home/vscode/.config/gh,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.coderabbit,target=/home/vscode/.coderabbit,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.local/bin,target=/home/vscode/.host-local/bin,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.claude,target=/home/vscode/.claude,type=bind,consistency=cached",
    // "source=${localEnv:HOME}/.claude.json,target=/home/vscode/.claude.json,type=bind,consistency=cached",
    "source=${localEnv:HOME}/GitHub/maverick,target=/opt/maverick,type=bind,consistency=cached"
  ]
}
