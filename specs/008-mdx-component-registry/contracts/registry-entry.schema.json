{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://get2know.io/schemas/component-registry-entry.json",
  "title": "ComponentRegistryEntry",
  "description": "Schema for MDX component registry entries (FR-001)",
  "type": "object",
  "required": ["name", "version", "description", "requiredProps"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[A-Z][a-zA-Z0-9]*$",
      "description": "Canonical name used in MDX files (PascalCase)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "description": "Human-readable description for documentation"
    },
    "requiredProps": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of required prop names"
    },
    "optionalProps": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of optional prop names"
    },
    "defaultProps": {
      "type": "object",
      "description": "Default values for optional props"
    },
    "dependencies": {
      "type": "array",
      "items": { "type": "string" },
      "description": "External dependencies (e.g., environment variables)"
    },
    "examples": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/RegistryExample"
      },
      "description": "Usage examples for documentation"
    },
    "deprecated": {
      "type": "boolean",
      "default": false,
      "description": "Whether component is deprecated"
    },
    "deprecationMessage": {
      "type": "string",
      "description": "Message shown when component is deprecated"
    }
  },
  "definitions": {
    "RegistryExample": {
      "type": "object",
      "required": ["title", "code"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Example title"
        },
        "code": {
          "type": "string",
          "description": "MDX code snippet"
        },
        "description": {
          "type": "string",
          "description": "Optional description"
        }
      }
    }
  }
}
