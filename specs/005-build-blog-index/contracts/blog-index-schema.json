{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://get2know.io/schemas/blog-index-entry.json",
  "title": "BlogIndexEntry Schema",
  "description": "Schema for blog index page entries",
  "type": "object",
  "required": ["slug", "title", "formattedDate", "rawDate", "summary", "url"],
  "additionalProperties": false,
  "properties": {
    "slug": {
      "type": "string",
      "minLength": 1,
      "description": "Post identifier from filename"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Display title for the post"
    },
    "formattedDate": {
      "type": "string",
      "description": "Human-readable date (e.g., 'May 2, 2020')"
    },
    "rawDate": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "ISO date string in YYYY-MM-DD format"
    },
    "summary": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Description or auto-generated excerpt"
    },
    "url": {
      "type": "string",
      "pattern": "^/posts/[a-z0-9-]+$",
      "description": "Canonical URL path to the post"
    }
  },
  "examples": [
    {
      "slug": "demo-mdx",
      "title": "Welcome to MDX",
      "formattedDate": "December 15, 2025",
      "rawDate": "2025-12-15",
      "summary": "This is a demo post proving the MDX pipeline works end-to-end.",
      "url": "/posts/demo-mdx"
    },
    {
      "slug": "getting-started-typescript",
      "title": "Getting Started with TypeScript",
      "formattedDate": "May 2, 2020",
      "rawDate": "2020-05-02",
      "summary": "Learn the basics of TypeScript for modern web development.",
      "url": "/posts/getting-started-typescript"
    }
  ]
}
