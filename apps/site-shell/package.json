{
  "name": "site-shell",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "npx tsx scripts/copy-assets.ts",
    "prebuild": "npx tsx scripts/copy-assets.ts",
    "dev": "next dev --hostname 0.0.0.0",
    "build": "npm run validate:merch && next build",
    "start": "next start",
    "validate:merch": "npx tsx scripts/validate-merch.ts",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "postinstall": "node ./scripts/postinstall.js",
    "validate:seo": "npx tsx scripts/validate-seo.ts"
  },
  "dependencies": {
    "@icons-pack/react-simple-icons": "^13.8.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/typography": "^0.5.19",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gray-matter": "^4.0.2",
    "lucide-react": "^0.562.0",
    "next": "^16.1.6",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "remark-gfm": "^4.0.1",
    "styled-jsx": "^5.1.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.2.0"
